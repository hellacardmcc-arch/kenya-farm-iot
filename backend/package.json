{
  "name": "kenya-farm-backend",
  "version": "1.0.0",
  "description": "Kenya Farm IoT Dashboard - Express/TypeScript API, SMS (Africa's Talking)",
  "main": "dist/index.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "render-build": "npm install && npm run build",
    "migrate": "npx ts-node src/migrations/run-migrations.ts",
    "migrate:typeorm": "npx ts-node src/scripts/run-typeorm-migrations.ts",
    "build:ci": "npm install && npm run build",
    "build:tsc": "tsc -p tsconfig.json",
    "build:copy": "copyfiles -u 1 \"src/**/*.html\" \"src/**/*.css\" dist/ || exit 0",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:seed": "ts-node src/db/seed.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "africastalking": "^0.6.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
