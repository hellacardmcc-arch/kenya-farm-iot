# Kenya Farm IoT - Backend
# Copy to .env and set values

PORT=3000
FRONTEND_URL=https://your-frontend.onrender.com
NODE_ENV=development

DATABASE_URL=postgresql://postgres:postgres@localhost:5433/farmdb
JWT_SECRET=your_kenya_farm_secret_key_2024
ADMIN_JWT_SECRET=your-super-secure-admin-jwt-secret-change-this

MQTT_URL=mqtt://localhost:1883
MQTT_TOPIC_PREFIX=kenya-farm
ALERT_THRESHOLD_LOW=20
ALERT_THRESHOLD_HIGH=90

SMS_MODE=mock
AFRICAS_TALKING_USERNAME=
AFRICAS_TALKING_API_KEY=

# Email Configuration (for OTP and notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
